{
	"type": "object",
	"properties": {
        "code": {
			"type": "string",
            "minLength": 5,
            "maxLength": 40,
            "pattern": "^\\w+$"
		},
		"email": {
			"type": "string",
            "format": "email"
		},
		"newPassword": {
			"$ref": "api://schema/user/password.json"
		}
	},
	"required": [
		"code",
		"email",
		"newPassword"
	],
    "additionalProperties": false
}