{
    "type": "string",
    "format": "date-time",

    "allowFilters": true,
    "$filters": [
        {
            "$func": "min-datetime",
            "$vars": {
                "value": "2021-09-01T19:00:00"
            }
        },
        {
            "$func": "max-datetime",
            "$vars": {
                "value": "2030-01-01T12:00:00"
            }
        }
    ]
}